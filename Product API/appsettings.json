{
  "Logging": {
    "LogLevel": {
      "Default": "Information", // Nivel de detalle general de los logs (Info, Warning, Error, etc.)
      "Microsoft.AspNetCore": "Warning" // Específicamente para logs del framework ASP.NET Core (solo advertencias o más graves)
    }
  },
  "AllowedHosts": "*", // Permite que la API acepte peticiones desde cualquier host (útil en desarrollo)
  "ConnectionStrings": {
    "Connection": "[Default Connection]"
  }
}
